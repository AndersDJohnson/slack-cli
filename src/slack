#!/usr/bin/env bash

case "${1}" in
  init)
    while (( "$#" )); do
      case "${2}" in
        --channel=*) CHANNEL=${2/--channel=/''} && shift ;;
        --emoji=*) EMOJI=${2/--emoji=/''} && shift ;;
        --silent) SILENT='0' && shift ;;
        --username=*) USERNAME=${2/--username=/''} && shift ;;
        --webhook=*) WEBHOOK=${2/--webhook=/''} && shift ;;
        -c*) CHANNEL=${3} && shift && shift ;;
        -e*) EMOJI=${3} && shift && shift ;;
        -s) SILENT='0' && shift ;;
        -u*) USERNAME=${3} && shift && shift ;;
        -e*) WEBHOOK=${3} && shift && shift ;;
        *) shift ;;
      esac
    done

    test -z "${WEBHOOK}" && read -e -p 'Enter default webhook (e.g. https://hooks.slack.com/services/XXX/XXX/XXX): ' WEBHOOK
    test -z "${CHANNEL}" && read -e -p 'Enter default channel (e.g. @username): ' CHANNEL
    test -z "${USERNAME}" && read -e -p 'Enter default username (e.g. username-bot): ' USERNAME
    test -z "${EMOJI}" && read -e -p 'Enter default emoji (e.g. :robot_face:): ' EMOJI
    test -z "${SILENT}" && echo -n 'Initializing: '

    echo "${WEBHOOK}" > ~/.slack-cli && \
    echo "${CHANNEL}" >> ~/.slack-cli && \
    echo "${USERNAME}" >> ~/.slack-cli && \
    echo "${EMOJI}" >> ~/.slack-cli

    case "$?" in
      0) test -z "${SILENT}" && echo 'done' ; exit 0 ;;
      *) test -z "${SILENT}" && echo 'fail' ; exit 1 ;;
    esac
  ;;

  send)
    CHANNEL=$(sed -n '2p' < ~/.slack-cli)
    EMOJI=$(sed -n '4p' < ~/.slack-cli)
    USERNAME=$(sed -n '3p' < ~/.slack-cli)
    WEBHOOK=$(sed -n '1p' < ~/.slack-cli)

    while (( "$#" )); do
      case "${2}" in
        --channel=*) CHANNEL=${2/--channel=/''} && shift ;;
        --emoji=*) EMOJI=${2/--emoji=/''} && shift ;;
        --silent) SILENT='0' && shift ;;
        --text=*) TEXT=${2/--text=/''} && shift ;;
        --username=*) USERNAME=${2/--username=/''} && shift ;;
        --webhook=*) WEBHOOK=${2/--webhook=/''} && shift ;;
        -c*) CHANNEL=${3} && shift && shift ;;
        -e*) EMOJI=${3} && shift && shift ;;
        -s) SILENT='0' && shift ;;
        -t*) TEXT=${3} && shift && shift ;;
        -u*) USERNAME=${3} && shift && shift ;;
        -e*) WEBHOOK=${3} && shift && shift ;;
        *) test -n "${2}" && TEXT=${2} ; shift ;;
      esac
    done

    test -z "${WEBHOOK}" && read -e -p 'Enter webhook url: ' WEBHOOK
    test -z "${CHANNEL}" && read -e -p 'Enter channel (e.g. #general): ' CHANNEL
    test -z "${USERNAME}" && read -e -p 'Enter username (e.g. username-bot): ' USERNAME
    test -z "${EMOJI}" && read -e -p 'Enter emoji (e.g. robot_face): ' EMOJI
    test -z "${TEXT}" && read -e -p 'Enter text (e.g. Hello World!): ' TEXT
    test -z "${SILENT}" && echo -n 'Sending: '

    PAYLOAD="payload={\"text\": \"${TEXT}\", \"channel\": \"${CHANNEL}\", \"username\": \"${USERNAME}\", \"icon_emoji\": \"${EMOJI}\"}"
    curl --silent --fail -X POST --data-urlencode "${PAYLOAD}" ${WEBHOOK} > /dev/null

    case "$?" in
      0) test -z "${SILENT}" && echo 'done' ; exit 0 ;;
      *) test -z "${SILENT}" && echo 'fail' ; exit 1 ;;
    esac
  ;;

  --help)
    a=(${0//\// })
    bin=${a[${#a[@]}-1]}

    echo 'Usage:'
    echo "  ${bin} init [--webhook|-w <webhook>] [--channel|-c <channel>] [--username|-u <username>] [--emoji|-e <emoji>] [--silent|-s]"
    echo "  ${bin} send [--text|-t <text>] [--webhook|-w <webhook>] [--channel|-c <channel>] [--username|-u <username>] [--emoji|-e <emoji>] [--silent|-s]"
    echo
    echo "Settings Commands:"
    echo "  init     Initialize default settings"
    echo
    echo "Messaging Commands:"
    echo "  send           Send a message"
    echo "  sendf task     Send a formatted message; task template"
  ;;

  --version) echo 'v0.1.0' ;;

  *) ${0} --help && exit 1 ;;
esac

exit 0
